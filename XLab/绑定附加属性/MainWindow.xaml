<Window x:Class="绑定附加属性.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:绑定附加属性"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Set Grid.Row" Click="ButtonBase_OnClick"></Button>
        <TextBlock x:Name="DemoTextBlock" 
                   Text="{Binding (Grid.Row), RelativeSource={RelativeSource Self}}" />
    </StackPanel>
</Window>
